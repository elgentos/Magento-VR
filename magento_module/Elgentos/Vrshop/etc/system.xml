<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <vrshop translate="label" module="vrshop">
            <label>Virtual Reality</label>
            <sort_order>100</sort_order>
        </vrshop>
    </tabs>
    <sections>
        <vrshop translate="label" module="vrshop">
            <label>Settings</label>
            <tab>vrshop</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <vrshop_group translate="label" module="vrshop">
                    <label>Virtual Reality settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <vrshop_promotion1 translate="label comment">
                            <label>Promotie afbeelding 2</label>
                            <comment>Allowed file types: jpeg, gif, png.</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">vrshop</upload_dir>
                            <base_url type="media" scope_info="1">vrshop</base_url>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </vrshop_promotion1>

                        <vrshop_promotion2 translate="label comment">
                            <label>Promotie afbeelding 1</label>
                            <comment>Allowed file types: jpeg, gif, png.</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">vrshop</upload_dir>
                            <base_url type="media" scope_info="1">vrshop</base_url>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </vrshop_promotion2>

                        <vrshop_location translate="label tooltip comment">
                            <label>Select location</label>
                            <frontend_type>select</frontend_type>
                            <source_model>vrshop_adminhtml/system_config_source_locationselector</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </vrshop_location>
                    </fields>
                </vrshop_group>
            </groups>
        </vrshop>
    </sections>
</config>